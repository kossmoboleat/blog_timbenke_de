---
layout: layouts/base.njk
section: post
---

<article>
  <h3>{{ title }}</h3>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | machineDate }}</time>
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
      {% for tag in tags %}
        {%- if tag != "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/' | url }}">‚Üê Blog index</a>
</nav>
